{
  "manifest_version": 3,
  "name": "Mac.bid True Price Calculator",
  "version": "1.0",
  "description": "Shows the true price (including buyer's premium) on Mac.bid auction pages.",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
  {
    "matches": [
      "*://*.mac.bid/lots/*",
      "*://*.mac.bid/*?*lid=*"
    ],
    "js": ["content.js"],
    "css": ["style.css"]
  }
],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}